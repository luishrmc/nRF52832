{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile - Debug",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "make",
			"args": [
				"-j4"
			],
			"dependsOn": [
				"Build - Debug"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build - Debug",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				"..",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none"
			}
		},
		{
			"type": "shell",
			"label": "Build - Release",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				"..",
				"-DCMAKE_BUILD_TYPE=Release"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none"
			}
		},
		{
			"type": "shell",
			"label": "Compile - Release",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "make",
			"args": [
				"-j4"
			],
			"dependsOn": [
				"Build - Release"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "shell",
			"label": "Run Debug",
			"options": {
				"cwd": "${workspaceFolder}/config/jlink"
			},
			"command": "JLinkExe",
			"args": [
				"-CommandFile",
				"flash.jlink"
			],
			"dependsOn": [
				"Compile - Debug"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test"
			}
		},
		{
			"type": "shell",
			"label": "Run Release",
			"options": {
				"cwd": "${workspaceFolder}/config/jlink"
			},
			"command": "JLinkExe",
			"args": [
				"-CommandFile",
				"flash.jlink"
			],
			"dependsOn": [
				"Compile - Release"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test"
			}
		},
		{
			"type": "shell",
			"label": "Erase Target",
			"options": {
				"cwd": "${workspaceFolder}/config/jlink"
			},
			"command": "JLinkExe",
			"args": [
				"-CommandFile",
				"erase.jlink"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test"
			}
		},
		{
			"type": "shell",
			"label": "Clean Project",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "rm",
			"args": [
				"-rf",
				"*",
				"&&",
				"touch",
				".gitkeep"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none"
			}
		},
		{
			"type": "shell",
			"label": "Run Test",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "ctest",
			"args": [
				"--output-on-failure"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Doxygen",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "make",
			"args": [
				"docs",
			],
			"dependsOn": [
				"Compile - Debug"
			],
			"problemMatcher": []
		}
	]
}